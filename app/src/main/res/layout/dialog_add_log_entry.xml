<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record New Event"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Event Type:"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/spinner_event_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>
    <!-- Or use MaterialComponents.TextInputLayout with an AutoCompleteTextView for a more modern dropdown -->
    <!-- For simplicity, standard Spinner is used here -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_notes"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Optional Notes">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="2"
            android:gravity="top"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
