<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.ImportFragment">

    <TextView
        android:id="@+id/text_import_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Data from CSV"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/text_import_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import data from a CSV file. Ensure the format matches the export format (ID,Timestamp,Event,Notes). Existing entries with the same ID will be updated."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_select_import_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select CSV File to Import" />

    <!-- This was the missing TextView -->
    <TextView
        android:id="@+id/text_import_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="No file selected."
        android:textSize="14sp"/>

</LinearLayout>
